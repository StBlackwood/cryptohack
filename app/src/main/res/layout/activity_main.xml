<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="4dp"
    tools:context="com.blackwood.cryptohack.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>
        <CheckBox
            android:id="@+id/notifications_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            />
        <Button
            android:id="@+id/show_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
        <EditText
            android:id="@+id/limit_edit_text"
            android:inputType="numberDecimal"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="3.0"
            android:gravity="center"
            />
        <Button
            android:id="@+id/limit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limit"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_marginEnd="5dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_layout_left"
                >
                <!--<Button-->
                    <!--android:background="#ff0"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="NCASH"-->
                    <!--android:minWidth="0dp"-->
                    <!--/>-->
                <!--<Button-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="NCASH"-->
                    <!--android:minWidth="0dp"-->
                    <!--/>-->

            </LinearLayout>
            <LinearLayout
                android:id="@+id/assets_data"
                android:visibility="gone"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/currency_name"
                        android:layout_weight="1.1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NCASH"
                        android:gravity="center"
                        android:textColor="#00f"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/currency_koinex"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.00008"
                        android:gravity="center"
                        android:textColor="#f00"
                        />
                    <TextView
                        android:id="@+id/currency_binance"
                        android:layout_weight="1"
                        android:textColor="#f0f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.00000008"
                        android:gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cryptos"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="15sp"

                        />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Koinex"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="15sp"

                        />
                    <TextView
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Binance"
                        android:gravity="center"
                        android:textSize="15sp"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/assets_names"
                        android:layout_weight="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.4"
                        android:text="Test\nTest\nTest\nTest\n"
                        android:gravity="start"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/assets_koinex"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data\nData\nData\nData\n"
                        android:lineSpacingMultiplier="1.4"
                        android:gravity="start"
                        android:textSize="15sp"

                        />
                    <TextView
                        android:id="@+id/assets_binance"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test\nTest\nTest\nTest\n"
                        android:gravity="start"
                        android:lineSpacingMultiplier="1.4"
                        android:textSize="15sp"

                        />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/ledger_text_view"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.4"
                android:text="-5.53    NCASH    ->    BTC"
                />

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_layout_right"
                >
                <!--<Button-->
                    <!--android:background="#ff0"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="NCASH"-->
                    <!--android:minWidth="0dp"-->
                    <!--/>-->


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
